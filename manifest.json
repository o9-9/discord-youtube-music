{
  "manifest_version": 3,
  "name": "YouTube Music Discord Rich Presence",
  "version": "1.0.0",
  "description": "YouTube Music'te dinlediğiniz şarkıları Discord durumunuzda gösterir",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://music.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/beyazwd.ico"
  },
  "icons": {
    "16": "icons/beyazwd.ico",
    "48": "icons/beyazwd.ico",
    "128": "icons/beyazwd.ico"
  }
}