{
  "name": "youtube-music-discord-rpc",
  "version": "1.0.0",
  "description": "YouTube Music Discord Rich Presence - Masaüstü Uygulaması",
  "author": "YouTube Music RPC Team",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "build": {
    "appId": "com.youtubemusic.discordrpc",
    "productName": "YouTube Music Discord RPC",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "app-icon.ico",
      "siyah*.ico",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}